<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title admin Post | add
        include ../ncludes/admin/head.pug
    body(id="page-top")
        include ../includes/admin/navigation.pug
        //- Form tattoo
        .container.p-4
            .row
                .col-md-4.offset-md-4
                    .card
                        .card-header.text-center
                            h3.card-title Nuevo Post
                        .card-body
                            form(action="/admin/blog/add" method="POST" enctype="multipart/form-data")
                                .form-group
                                    input(required type="text" name="title" class="form-control" placeholder="Titulo")
                                .form-group
                                    input(required type="text" name="subtitle" class="form-control" placeholder="Subtitulo")
                                .form-group
                                    input(type="text" name="facebook" class="form-control" placeholder="Facebook")
                                .form-group
                                    input(type="text" name="instagram" class="form-control" placeholder="Instagram")
                                .form-group
                                    input(type="text" name="twitter" class="form-control" placeholder="Twitter")
                                .form-group
                                    textarea(name="description",class="form-control", placeholder="Descripcion")
                                .form-group
                                    textarea(name="summary",class="form-control", placeholder="Mas descripcion")
                                .input-group.mb-3
                                    .custom-file
                                        input(required type="file" class="custom-file-input" name="image" value="Buscar")
                                        label(class="custom-file-label") Elige
                                .form-group
                                    input(type="submit" value="Enviar" class="btn btn-success btn-block")
        include ../includes/admin/foot.pug